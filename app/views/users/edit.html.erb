<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => 'Leave password blank if dont want to change', :class => 'edit_password' %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, :placeholder => 'Leave password blank if dont want to change', :class => 'edit_password' %>

      <div>
       <%= f.submit "Save changes", class: "btn btn-large btn-primary save_edit_user" %>
      </div>
    <% end %>

  </div>
</div>